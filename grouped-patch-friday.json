{
  "description": "Run every Friday morning, automerging minor updates as a group",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    ":semanticCommits",
    "github>capralifecycle/renovate-config:group-minor"
  ],
  "timezone": "Europe/Oslo",
  "minimumReleaseAge": "3 days",
  "schedule": "* 5-13 * * 5",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["* 5-13 * * 5"]
  }
}